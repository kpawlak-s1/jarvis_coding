# Jarvis Coding API Configuration
# Copy this file to .env and update values for your environment

# API Settings
PROJECT_NAME="Jarvis Coding API"
PROJECT_VERSION="2.0.0"
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256

# Authentication
# Set to true to disable authentication (development only)
DISABLE_AUTH=false

# API Keys (comma-separated for multiple keys per role)
# Admin keys have full access
JARVIS_ADMIN_KEYS=admin-key-change-in-production

# Write keys can execute generators and test parsers
JARVIS_WRITE_KEYS=

# Read-only keys can view but not modify
JARVIS_READ_KEYS=

# Rate Limiting (requests per minute)
RATE_LIMIT_ADMIN=1000
RATE_LIMIT_WRITE=500
RATE_LIMIT_READ=100
RATE_LIMIT_WINDOW_MINUTES=1

# Database
DATABASE_URL=sqlite+aiosqlite:///./jarvis_coding.db

# SentinelOne Integration
S1_HEC_TOKEN=your-hec-token
S1_SDL_API_TOKEN=your-sdl-api-token
S1_HEC_URL=https://your-instance.sentinelone.net/api/v1/cloud_connect/events/raw

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Generator Settings
DEFAULT_EVENT_COUNT=10
MAX_EVENT_COUNT=1000
DEFAULT_FORMAT=json
STAR_TREK_THEME=true